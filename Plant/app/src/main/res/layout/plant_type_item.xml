<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:layout_marginEnd="20dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cvPlantType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/ivPlantType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/home_plants"
            android:scaleType="centerCrop"
            />

    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tvTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="bottom"
        android:paddingStart="18dp"
        android:text="Home Plants"
        android:elevation="3dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvTypeName"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="3dp"
        android:layout_marginBottom="40dp"
        android:paddingStart="18dp"

        >
        <TextView
            android:id="@+id/tvTypeQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" type of plant"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>