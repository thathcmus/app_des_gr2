<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Profile.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_200">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ellipse"
                    tools:layout_editor_absoluteX="182dp"
                    tools:layout_editor_absoluteY="16dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Taylor"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="105dp"
                    tools:layout_editor_absoluteY="70dp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Ha Long"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    tools:layout_editor_absoluteX="105dp"
                    tools:layout_editor_absoluteY="104dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:layout_editor_absoluteX="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/atrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/avatar"
                    android:text="ARTICLES"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="51dp"
                    tools:layout_editor_absoluteY="28dp" />

                <Button
                    android:id="@+id/specp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/avatar"
                    android:text="SPECIES"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="246dp"
                    tools:layout_editor_absoluteY="28dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/art"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="97dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="219dp"
                    tools:layout_editor_absoluteY="97dp"
                    tools:ignore="MissingConstraints"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            tools:layout_editor_absoluteX="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/union"
                >

                <Button
                    android:id="@+id/button2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/buttonhome"
                    android:drawableTop="@drawable/vector_ek4"
                    android:text="home"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="84dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/buttonhome"
                    android:drawableTop="@drawable/prox"
                    android:text="profile"
                    tools:layout_editor_absoluteX="291dp"
                    tools:layout_editor_absoluteY="84dp"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@android:drawable/ic_input_add"
                    tools:layout_editor_absoluteX="178dp"
                    tools:layout_editor_absoluteY="6dp"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>