<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvForgotPassTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:textSize="36sp"
        android:textColor="@color/text_color_bold"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <TextView
        android:id="@+id/tvForgetPassSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset link will be sent your email"
        android:textSize="18sp"
        android:textColor= "#495566"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotPassTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/tvForgotEmailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#6A6F7D"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvForgetPassSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <EditText
        android:id="@+id/etForgetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example@gmail.com"
        android:textColor="#36455A"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotEmailTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <Button
        android:id="@+id/btnReset"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/btn_color"
        android:text="SEND EMAIL"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/etForgetEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>